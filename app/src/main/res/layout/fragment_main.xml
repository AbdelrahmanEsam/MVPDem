<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.MainFragment">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/getAllButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_background"
        android:text="@string/get_all_moves"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/favouriteButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/favouriteButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="@string/get_favourite_moves"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/exit"
        app:layout_constraintEnd_toEndOf="@+id/getAllButton"
        app:layout_constraintStart_toStartOf="@+id/getAllButton"
        app:layout_constraintTop_toBottomOf="@+id/getAllButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/exit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="@string/exit"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/favouriteButton"
        app:layout_constraintStart_toStartOf="@+id/favouriteButton"
        app:layout_constraintTop_toBottomOf="@+id/favouriteButton" />
</androidx.constraintlayout.widget.ConstraintLayout>